<section>
  <div class="container">
      <div class="row">
        <% if(products.length){
            for(var i = 0; i < products.length; i++){ %>
              <div class="col-12 col-sm-8 col-md-6 col-lg-4">
                <div class="card">
                  <a href="/detail/<%=products[i].name%>" class="img-link">
                    <img class="card-img" src="<%=products[i].image%>" alt="">
                  </a>
                  <div class="card-body">
                    <h4 class="card-title"><%=products[i].name%></h4>
                    <h6 class="card-subtitle mb-2 text-muted">Type: <%=products[i].type%></h6>
                    <div class="buy d-flex justify-content-between align-items-center">
                      <div class="price text-success"><h5 class="mt-4"><%=products[i].price%> vnd</h5></div>
                      <a href="#" class="btn btn-danger mt-3">Add to Cart</a>
                    </div>
                  </div>
                </div> 
              </div>
            <% }
        } else if (products.length == 0){ %>
          <h2 class="notify-text">No related products</h2>
        <% } %>
      </div>
    </div>
  </div>
</section>