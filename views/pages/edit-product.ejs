<div class="container">
    <%- include ('../partials/messages') %>
    <div class="row">
  		<div class="col-sm-3 my-auto"><!--left col-->
            <div class="text-center"><h4><%=product.name%></h4></div>
            <div class="text-center">
                <% if(product.image != 'undefined') {%>
                    <img src="<%=product.image%>" class="avatar img-circle img-thumbnail" style="width:200px;height:200px;object-fit: cover" alt="avatar">
                <% } else { %>
                <img src="http://ssl.gstatic.com/accounts/ui/avatar_2x.png" class="avatar img-circle img-thumbnail" style="width:200px;height:200px;object-fit: cover" alt="avatar">
                <% } %>
                <h6>Upload a different photo...</h6>
                <input form="edit" name="image" type="file" class="text-center center-block file-upload form-control">
                
            </div></hr><br>
        </div><!--/col-3-->

    	<div class="col-sm-9">
          <div class="tab-content">
            <div class="tab-pane active" id="home">
                  <form class="form" action="/edit-product/<%=product._id%>" method="post" id="edit" enctype='multipart/form-data'>
                      <div class="form-group">
                          
                          <div class="col-xs-6">
                            <label for="name"><h4>Name</h4></label>
                              <input type="text" class="form-control" name="name" id="name" placeholder="Name" title="enter your product name." value="<%=product.name%>">
                          </div>
                      </div>
          
                      <div class="form-group">
                          
                          <div class="col-xs-6">
                              <label for="price"><h4>Price</h4></label>
                              <input type="text" class="form-control" name="price" id="price" placeholder="Price" title="enter your product price." value="<%=product.price%>">
                          </div>
                      </div>

                      <div class="form-group">
                          
                          <div class="col-xs-6">
                              <label for="decription"><h4>Decription</h4></label>
                              <input type="text" class="form-control" name="decription" id="decription" placeholder="Decription" title="enter your decription." value="<%=product.decription%>">
                          </div>
                      </div>

                      <div class="form-group">
                          <div class="col-xs-6">
                            <label for="type"><h4>Type</h4></label>
                            <select name="type" id="type" class="form-control" value="<%=product.type%>">
                                <option>tops</option>
                                <option>bottoms</option>
                                <option>outerwears</option>
                                <option>accessories</option>
                            </select>
                          </div>
                      </div>

                      <div class="form-group">
                           <div class="col-xs-12">
                                <br>
                              	<button class="btn btn-lg btn-success" type="submit"><i class="glyphicon glyphicon-ok-sign"></i>Update</button>
                            </div>
                      </div>
              	</form>
              <hr>
             </div><!--/tab-pane-->
          </div><!--/tab-content-->

        </div><!--/col-9-->
    </div><!--/row-->